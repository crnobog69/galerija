  <style>
    footer {
      width: 100%;
      padding: 1rem;
      text-align: center;
      margin-top: auto;
    }
  
    p {
      font-size: 0.875rem;
      opacity: 0.8;
    }
  
    .heart {
      display: inline-block;
      transition: transform 0.2s ease;
    }
  
    .heart:hover {
      transform: scale(1.2);
    }
  
    a {
      text-decoration: none;
      color: inherit;
      transition: opacity 0.2s ease;
    }
  
    a:hover {
      font-weight: bold;
    }
