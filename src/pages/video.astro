---
import Layout from '../layouts/Layout.astro';
import Container from '../components/ui/Container.astro';
import { videos } from "../data/videos";
import { VideoCard } from "../components/video-card";

const title = "Видео";
---

<Layout title={title}>
  <Container>
    <main class="py-8">
      <h1 class="text-4xl font-bold tracking-tight mb-8 text-zinc-900 dark:text-white">
        Видео библиотека
      </h1>
      <p class="text-zinc-600 dark:text-white/60 text-lg mb-8">могуће је пустити више видеа од једном</p>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {videos.map((video) => (
          <VideoCard video={video} client:load />
        ))}
      </div>
    </main>
  </Container>
</Layout>

<style>
  /* Minimalist scrollbar - matching audio.astro style */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background-color: rgb(161 161 170); /* zinc-400 */
    border-radius: 4px;
  }

  @media (prefers-color-scheme: dark) {
    ::-webkit-scrollbar-thumb {
      background-color: rgb(113 113 122); /* zinc-500 */
    }
  }

  @media (prefers-color-scheme: light) {
    ::-webkit-scrollbar-thumb {
      background-color: rgb(212 212 216); /* zinc-300 */
    }
  }
</style>